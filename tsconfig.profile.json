{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "tmp/ts-build",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["lib/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
